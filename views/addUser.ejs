<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        /* Custom Form Styling */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        form {
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            background:rgba(255, 255, 255); /* Slight transparency */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            gap: 20px;
        }

        fieldset {
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 8px;
        }

        input[type="text"], input[type="tel"], input[type="email"], input[type="number"], input[type="date"], input[type="time"], select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

        input[type="text"]:focus, input[type="tel"]:focus, input[type="email"]:focus, input[type="number"]:focus, input[type="date"]:focus, input[type="time"]:focus, select:focus {
            border-color: #169282ea;
            outline: none;
        }

        textarea {
            min-height: 100px;
            resize: vertical; /* Allow vertical resizing */
        }

        button[type="submit"] {
            background-color: #169282ea;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }
        button[type="submit"]:hover {
            background-color: #0c7466ea;
        }
        .time-picker {
            width: 100%;
        }
        label {
            font-size: 1rem;
            font-weight: 600;
            color: #555;
            display: block;
            margin-bottom: 8px;
        }

        h1, h2 {
            color: #169282ea;
            text-align: left;
            font-size: 1.8rem;
            margin-bottom: 20px;
        }

        @media (max-width: 768px) {
            form {
                margin: 20px;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar', { page: 'userManagement'}) %>

    <form action="/addUser" method="post">
        <fieldset>
            <h2 style="color: #169282ea"><b>Add User:</b></h2>
            <br>
            
            <!-- user id does not display -->
            <input type="hidden" id="user_id" name="user_id">

            <!-- first name-->
            <label for="user_first_name">First Name: </label>
            <input type="text" id="user_first_name" name="user_first_name">
           

            <!-- last name-->
            <label for="user_last_name">Last Name: </label>
            <input type="text" id="user_last_name" name="user_last_name">
     

            <!-- email -->
            <label for="user_email">Email: </label>
            <input type="text" id="user_email" name="user_email">
     

            <!-- phone -->
            <label for="user_phone">Phone Number: </label>
            <input type="text" id="user_phone" name="user_phone">
        

            <!-- user position -->
            <label for="user_position">Position: </label>
            <select name="user_position" id="user_position">
                <option value="OWNER">Owner</option>
                <option value="SEWING INSTRUCTOR">Sewing Instructor</option>
                <option value="HELPER">Helper</option>
            </select>
            <br><br>

            <!-- start year-->
            <label for="user_start_year">Start Year: </label>
            <input type="date" id="user_start_year" name="user_start_year">
     

            <!-- county -->
            <label for="user_county">County: </label>
            <input type="text" id="user_county" name="user_county">
       

            <!-- state -->
            <label for="state">State <i>(required):</i></label>
                        <select id="state" name="user_state" required>
                            <% const states = [
                                'AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'FL', 'GA',
                                'HI', 'ID', 'IL', 'IN', 'IA', 'KS', 'KY', 'LA', 'ME', 'MD',
                                'MA', 'MI', 'MN', 'MS', 'MO', 'MT', 'NE', 'NV', 'NH', 'NJ',
                                'NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'RI', 'SC',
                                'SD', 'TN', 'TX', 'UT', 'VT', 'VA', 'WA', 'WV', 'WI', 'WY'
                            ]; %>
                            <% states.forEach(state => { %>
                                <option value="<%= state %>" ><%= state %></option>
                            <% }); %>
                        </select>
                        <br><br>

            <!-- username -->
            <label for="username">Username: </label>
            <input type="text" id="username" name="username">


            <!-- password -->
            <label for="password">Password: </label>
            <input type="text" id="password" name="password">
        
            <br><br>
            <button type="submit">Add</button>
        </fieldset>
    </form>
</body>
</html>