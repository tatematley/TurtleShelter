<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        /* Custom Form Styling */
        body {
            font-family: 'Arial', sans-serif;
        }
        .banner {
            background: linear-gradient( rgba(92, 88, 88, 0.7), rgba(92, 88, 88, 0.7)), 
                        url('/kid.jpg') no-repeat center center;
            background-size: cover;
            height: 400px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #ffffff;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
            font-size: 3rem;
            padding: 50px 20px; /* Add some space around the text */
        }

        form {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
            background: rgba(211, 211, 211, 0.199); /* Slight transparency */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        fieldset {
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 8px;
        }
        input[type="text"], input[type="tel"], input[type="email"], input[type="number"], input[type="date"], input[type="time"], select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }
        input[type="text"]:focus, input[type="tel"]:focus, input[type="email"]:focus, input[type="number"]:focus, input[type="date"]:focus, input[type="time"]:focus, select:focus {
            border-color: #169282ea;
            outline: none;
        }
        button[type="submit"] {
            background-color: #169282ea;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }
        button[type="submit"]:hover {
            background-color: #0c7466ea;
        }
        .time-picker {
            width: 100%;
        }
        label {
            font-size: 1rem;
            font-weight: 600;
            color: #555;
        }
        @media (max-width: 768px) {
            form {
                margin: 20px;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar', { page: 'userManagement'}) %>
    <br>

    
    <form action="/editUser/<%= user.user_id %>" method="post">
        <fieldset>
            <legend><h2 style="color: #169282ea"><b>Edit User:</b></h2></legend>
            

            <!-- first name -->
            <label for="user_first_name">First Name: </label>
            <input type="text" id="user_first_name" name="user_first_name" value="<%= user.user_first_name %>">
            <br><br>

            <!-- last name -->
            <label for="user_last_name">Last Name: </label>
            <input type="text" id="user_last_name" name="user_last_name" value="<%= user.user_last_name %>">
            <br><br>

            <!-- email -->
            <label for="user_email">Email: </label>
            <input type="text" id="user_email" name="user_email" value="<%= user.user_email %>">
            <br><br>

            <!-- phone -->
            <label for="user_phone">Phone Number: </label>
            <input type="text" id="user_phone" name="user_phone" value="<%= user.user_phone %>">
            <br><br>

            <!-- position dropdown -->
            <label for="user_position">Position: </label>
            <select name="user_position" id="user_position">
                <option value="OWNER">Owner</option>
                <option value="SEWING INSTRUCTOR">Sewing Instructor</option>
                <option value="HELPER">Helper</option>
            </select>
            <br><br>

            <!-- start year -->
            <label for="user_start_year">Start Year: </label>
            <input type="date" id="user_start_year" name="user_start_year" value="<%= user.user_start_year.toISOString().split('T')[0] %>">
            <br><br>

            <!-- county -->
            <label for="user_county">County: </label>
            <input type="text" id="user_county" name="user_county" value="<%= user.user_county %>">
            <br><br>

            <label for="state">State <i>(required)</i></label>
            <select id="state" name="user_state" required>
                <% const states = [
                    'AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'FL', 'GA',
                    'HI', 'ID', 'IL', 'IN', 'IA', 'KS', 'KY', 'LA', 'ME', 'MD',
                    'MA', 'MI', 'MN', 'MS', 'MO', 'MT', 'NE', 'NV', 'NH', 'NJ',
                    'NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'RI', 'SC',
                    'SD', 'TN', 'TX', 'UT', 'VT', 'VA', 'WA', 'WV', 'WI', 'WY'
                ]; %>
                <% states.forEach(state => { %>
                    <option value="<%= state %>"  <%= user.user_state === state ? 'selected' : '' %>><%= state %></option>
                <% }); %>
            </select>
            <br><br>

            <!-- username -->
            <label for="username">Username: </label>
            <input type="text" id="username" name="username" value="<%= user.username %>">
            <br><br>

            <!-- password -->
            <label for="password">Password: </label>
            <input type="text" id="password" name="password" value="<%= user.password %>" >
        </fieldset>
        <br>
        <button type="submit">Save</button>
    </form>
</body>
</html>

