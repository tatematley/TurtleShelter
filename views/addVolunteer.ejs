<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Volunteer</title>
    <style>
        /* Custom Form Styling */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        form {
            max-width: 600px;
            margin: 30px auto;
            padding: 20px;
            background:rgba(255, 255, 255); /* Slight transparency */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            gap: 20px;
        }

        fieldset {
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 8px;
        }

        h1, h2 {
            color: #169282ea;
            text-align: left;
            font-size: 1.8rem;
            margin-bottom: 20px;
        }

        label {
            font-size: 1rem;
            font-weight: 600;
            color: #555;
            display: block;
            margin-bottom: 8px;
        }

        input[type="text"], input[type="tel"], input[type="email"], input[type="number"], input[type="date"], select, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

        input:focus, select:focus, textarea:focus {
            border-color: #169282ea;
            outline: none;
        }

        textarea {
            height: 100px;
            resize: none;
        }

        button[type="submit"] {
            background-color: #169282ea;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }
        button[type="submit"]:hover {
            background-color: #0c7466ea;
        }

        button:active {
            background-color: #169282ea;
        }

        @media (max-width: 768px) {
            form {
                margin: 20px;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar', { page: 'userManagement'}) %>

    <!-- Form -->
    <form action="/addVolunteer" method="POST">
        <fieldset>
            <h2 style="color: #169282ea; font-weight: bolder;">Add Volunteer:</h2>
            <br>

            <!-- First Name -->
            <label for="volunteer_first_name">First Name:</label>
            <input type="text" id="volunteer_first_name" name="volunteer_first_name" required> 

            <!-- Last Name -->
            <label for="volunteer_last_name">Last Name:</label>
            <input type="text" id="volunteer_last_name" name="volunteer_last_name" required> 

            <!-- Age -->
            <label for="volunteer_age">Age:</label>
            <input type="number" id="volunteer_age" name="volunteer_age" required> 

            <!-- Phone -->
            <label for="volunteer_phone">Phone Number:</label>
            <input type="tel" id="volunteer_phone" name="volunteer_phone" required> 

            <!-- Email -->
            <label for="volunteer_email">Email Address:</label>
            <input type="email" id="volunteer_email" name="volunteer_email" required> 

            <!-- County -->
            <label for="volunteer_county">County:</label>
            <input type="text" id="volunteer_county" name="volunteer_county">

            <!-- State -->
            <label for="volunteer_state">State:</label>
            <input type="text" id="volunteer_state" name="volunteer_state">

            <!-- Volunteer Source -->
            <label for="volunteer_source">How did you hear about us?</label>
            <select id="volunteer_source" name="volunteer_source">
                <option value="family/friend">Family/Friend</option>
                <option value="church_event">Church Event</option>
                <option value="social_media">Social Media</option>
                <option value="search_engine">Search Engine Search</option>
                <option value="podcast">Podcast</option>
                <option value="word_of_mouth">Word of Mouth</option>
                <option value="other">Other</option>
            </select>
            <br><br>

            <!-- Sewing Level -->
            <label for="sewing_level">Sewing Level:</label>
            <select id="sewing_level" name="sewing_level">
                <option value="BEGINNER">Beginner</option>
                <option value="INTERMEDIATE">Intermediate</option>
                <option value="EXPERIENCED">Experienced</option>
            </select>
            <br><br>

            <!-- Monthly Number of Hours -->
            <label for="num_monthly_hours">Monthly Number of Hours:</label>
            <input type="number" id="num_monthly_hours" name="num_monthly_hours">

            <!-- Notes -->
            <label for="notes">Notes:</label>
            <textarea name="notes" id="notes"></textarea>
            <br><br>

            <!-- Submit Button -->
            <button type="submit">Save</button>
        </fieldset>
    </form>
</body>
</html>
