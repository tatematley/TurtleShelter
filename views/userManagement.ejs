<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
      body {
          background-color: white;
      }

      label {
          font-size: 2rem;
          margin-left: 30px;
          color: rgb(34, 34, 34);
      }

      table {
          width: 95%;
          margin-right: 30px;
          margin-left: 30px;
          border-collapse: collapse;
          background-color: white;
          box-shadow: 0 2px 8px rgba(0, 123, 181, 0.2);
      }

      td {
          padding: 5px;
          text-align: center;
      }

      tr:nth-child(even) td {
          background-color: #e3f3fb;
      }

      th{
          padding: 8px;
          text-align: center;
      }

      thead {
          background-color: #169282ea;
          color: white;
          text-align: center;
          font-weight: bold;
      }

      button {
          background-color: #169282ea;
          color: white;
          border-radius: 4px !important;
          padding: 8px 12px;
          border: none;
          font-size: 0.9rem;
          cursor: pointer;
          transition: background-color 0.3s, transform 0.2s;
      }

      button:hover {
          background-color: #0c7466ea;
          transform: scale(1.05);
      }

      button:active {
          background-color: #0c7466ea;
      }

      .pagination {
          text-align: center;
          margin: 20px 0;
      }

      .pagination a {
          color: #0c7466ea;
          text-decoration: none;
          margin: 10px 30px;
          padding: 8px 12px;
          border: 1px solid #ddd;
          border-radius: 4px;
          transition: background-color 0.3s;
      }

      .pagination a:hover {
          background-color: #0c7466ea;
      }

      .pagination .active {
          background-color: #0c7466ea;
          color: white;
          border-color: #0c7466ea;
      }

      .search-container {
            max-width: 600px;
            display: flex;
            align-items: center;
            background-color: #fff;
            border: 2px solid #ddd;
            border-radius: 4px !important;
            padding: 7px;
            box-shadow: 0 4px 6px rgba(0, 123, 181, 0.2);
            position: absolute;
            top: 70px;
            right: 30px;
        }

        .search-container input {
            flex: 1;
            border: none;
            outline: none;
            padding: 10px;
            font-size: 16px;
        }

        .search-container button {
            background-color: #169282ea;
            color: white;
            border-radius: 4px !important;
            padding: 8px 12px;
            border: none;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        .search-container button:hover {
            background-color: #0c7466ea;
            transform: scale(1.05);
        }

  </style>

</head>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar', { page: 'userManagement', security: security }) %>
    <br>

    <!--Search Users-->
    <div class="search-container">
        <form action="/searchUsers" method="GET">
            <input type="text" name="query" placeholder="Search Users...">
            <button type="submit">Search</button>
        </form>
    </div>

    <div>
        <label><b>User Information</b></label>
    <br><br>
    <table >
        <thead style="text-align: center;">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Position</th>
                <th>Location</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
            
        <tbody>
            <% for (let iCount = 0; iCount < users.length; iCount++) { %>
                <tr>
                    <td><%= users[iCount].user_first_name %> <%= users[iCount].user_last_name %></td>
                    <td><%= users[iCount].user_email %></td>
                    <td><%= users[iCount].user_phone %></td>
                    <td><%= users[iCount].user_position %></td>
                    <td><%= users[iCount].user_county %>, <%= users[iCount].user_state %></td>
                    <td>
                        <form action="/editUser/<%= users[iCount].user_id %>" method="get">
                            <button type="submit">Edit</button>
                        </form>
                    </td>
                    <td>
                        <form action="/deleteUser/<%= users[iCount].user_id %>" method="post">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                
            <% } %>
        </tbody>
    </table>
    <br><br>
    <form action="/addUser" method="get">
        <button type="submit" style="margin-left: 30px;">Add User</button>
    </form>
    <br>
    <form action="/" method="get">
        <button type="submit" style="margin-left: 30px;">Return Home</button>
    </form>
    <br>
    <form action="/logout" method="get">
      <button type="submit" style="margin-left: 30px;">Log Out</button>
  </form>
    </div>
    
</body>
</html>
