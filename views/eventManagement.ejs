<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Set height of body and the document to 100% to enable "full page tabs" */
        body, html {
        height: 100%;
        margin: 0;
        font-family: Arial;
        }

        /* Style tab links */
        .tablink {
        background-color: #555;
        color: white;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        font-size: 17px;
        width: 33.33%;
        }

        .tablink:hover {
        background-color: #777;
        }

        /* Style the tab content (and add height:100% for full page content) */
        .tabcontent {
        color: white;
        display: none;
        padding: 100px 20px;
        height: 100%;
        }

        #Home {background-color: #00bfa5;}
        #News {background-color: purple;}
        #Contact {background-color: orange;}
        #About {background-color: orange;}
    table {
  width: 80%;
  margin: 20px auto;
  border-collapse: collapse;
  font-size: 12px; /* Slightly increase font size for readability */
  border: 1px solid #007bb5; /* Teal-blue border around the table */
  box-shadow: 0 2px 8px rgba(0, 123, 181, 0.2); /* Subtle shadow for a clean look */
}
th, td {
  border: 1px solid #007bb5; /* Teal-blue borders */
  padding: 10px; /* Balanced padding for a cleaner appearance */
  text-align: center;
  line-height: 1.5; /* Better line height for readability */
}
th {
  background-color: #007bb5; /* Teal-blue background for headers */
  color: white; /* White text for contrast */
  font-weight: bold;
  text-transform: uppercase; /* Make header text stand out */
}
td {
  background-color: #f9f9f9; /* Light background for cells */
}
.unique{
    background-color: none;
}
tr:nth-child(even) td {
  background-color: #e3f3fb; /* Light teal-blue for alternate rows */
}
tr:hover {
  background-color: #c5e4f3; /* Highlight row on hover for better usability */
  transition: background-color 0.3s; /* Smooth hover effect */
}
td{
    color: black;
}
h1{
    font-size: x-large;
    color: black;
    text-align: center;
    position: relative;
    padding: 20px;
}
/* Blue */
.info {
  border-color: #2196F3;
  border-radius: 5px;

}

.info:hover {
  background: #2196F3;
  color: white;
}

/* Blue */
.info2 {
  border-color: #2196F3;
  background-color: #2196F3;
  color: white;
  border-radius: 5px;
}
.info:hover {
  color: white;
  border-color: #007bb5;
}

    </style>
</head>
<body>
     <!-- Navbar -->
     <%- include('partials/navbar', { page: 'home' }) %>


    <h1 >Event Management</h1>
    <button class="tablink" onclick="openPage('Home', this, '#00bfa5')">Requested Events</button>
<button class="tablink" onclick="openPage('News', this, 'purple')" id="defaultOpen">Upcoming Events</button>
<button class="tablink" onclick="openPage('Contact', this, 'orange')">Completed Events</button>

<div id="Home" class="tabcontent">
    <table>
        <thead>
          <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Host First Name</th>
            <th>Host Last Name</th>
            <th>Host Phone</th>
            <th>Host Email</th>
            <th>Zip</th>
            <th>Actions</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
          <% if (requestedEvents.length > 0) { %>
            <% requestedEvents.forEach(row => { %>
              <tr>
                <input type="hidden" value="event_id">
                <td><%= row.event_name %></td>
                <td><%= new Date(row.event_date).toLocaleDateString('en-US') %></td> <!-- Format date -->
                <td><%= row.host_first_name %></td>
                <td><%= row.host_last_name%></td> 
                <td><%= row.host_phone %></td> <!--embeded if statement. if true ?(then) 'yes' :(else) 'no'-->
                <td><%= row.host_email %></td> 
                <td><%= row.zip %></td>
                <td>
                  <form action="/eventView/<%= row.id %>" method="GET" style="display:inline;"> <!--value after the slash is a parameter-->
                    <button class="info" type="submit">View Event Details</button>
                  </form>
                  <form action="/editEvent/<%= row.id %>" method="GET" style="display:inline;">
                    <button class="info" type="submit">Edit</button>
                  </form>
                  <form action="/deleteEvent/<%= row.id %>" method="POST" style="display:inline;">
                    <button class="info" type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                    </form>
                  
                </td>
                <td>
                <form action="/confirmEvent/<%= row.id %>" method="GET" class="unique" style="display:inline;">
                    <button class="info2" type="submit">Confirm Event</button>
                </form>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7">No data available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <form action="/addEvent" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
        <button class="info" type="submit">Add</button>
      </form>
</div>
<div id="News" class="tabcontent">
  <h3>News</h3>
  <p>Some news this fine day!</p>
</div>
<div id="Contact" class="tabcontent">
  <h3>Contact</h3>
  <p>Get in touch, or swing by for a cup of coffee.</p>
</div>
<div id="About" class="tabcontent">
  <h3>About</h3>
  <p>Who we are and what we do.</p>
</div>

<script>
    function openPage(pageName, elmnt, color) {
        // Hide all tab content by default
        const tabcontent = document.getElementsByClassName('tabcontent');
        for (let i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = 'none';
        }

        // Remove the active state from all tab links
        const tablinks = document.getElementsByClassName('tablink');
        for (let i = 0; i < tablinks.length; i++) {
            tablinks[i].style.backgroundColor = '';
        }

        // Show the current tab, and set its background color
        document.getElementById(pageName).style.display = 'block';
        elmnt.style.backgroundColor = color;
    }

    // Open the default tab on page load
    document.getElementById('defaultOpen').click();
</script>
  
</body>
</html>
