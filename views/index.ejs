    <link href="css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            font-family: 'Palatino', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* General page layout styling */
        html, body {
            height: 100%; /* Make sure the body takes up the full height */
            margin: 0; /* Remove default margin */
        }

        /* Banner Section */
        .banner {
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.95)), 
                        url('/redblueorangevests.png') no-repeat center center;
            background-size: cover;
            height: 500px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #ffffff;
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);
            padding: 50px 20px; /* Add some space around the text */
        }

        .banner h1 {
            margin-top: 20px; /* Add space above the h1 */
            font-size: 2rem; /* Adjust font size for better readability */
            line-height: 1.4; /* Improve line spacing */
            font-weight: normal; /* Make the font weight normal */
        }

        /* Stats Section */
        .stats-section {
            background-color: #00bfa5;
            color: white;
            padding: 40px 0;
            text-align: center;
        }

        .stats-section h2 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .stats-section p {
            font-size: 1.2rem;
            margin: 0;
        }

        .stats {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 20px;
        }

        .stat-box {
            flex: 1;
            max-width: 200px;
        }

        .stat-box h3 {
            font-size: 3rem;
            margin: 0;
        }

        .stat-box span {
            font-size: 1.2rem;
        }

        /* Carousel Section */
        #vestCarousel {
            margin: 40px auto;
            max-width: 400px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .carousel-inner img {
            height: 500px;
            object-fit: cover;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            filter: invert(100%);
            color: white;
        }

        /* General Styling for Text and Carousel */
        .text-carousel-container {
            display: flex; /* Use flexbox to align text and carousel side by side */
            gap: 30px; /* Add space between the text and carousel */
            align-items: center; /* Vertically center the items */
            justify-content: space-between;
            margin-top: 20px; /* Add some space above */
        }

        /* Text Section */
        .text-section h2 {
            font-size: 2rem; /* Make the text bigger like an h2 */
            font-weight: bold;
            color: #333;
            text-align: left; /* Align text to the left */
            max-width: 50%; /* Limit the text width to 50% of the container */
        }

        /* Footer styling */
        footer {
            background-color: #222; /* Dark background for the footer */
            color: #fff; /* White text color */
            text-align: center; /* Center the footer text */
            padding: 15px 0; /* Add padding */
            position: relative; /* Ensure it's positioned below the content */
            width: 100%; /* Ensure the footer takes up full width */
        }

        footer a {
            color: #00bfa5;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

                /* General Styling */
        body {
            font-family: 'Georgia', sans-serif; /* Match existing font */
            line-height: 1.6; /* Improve readability */
            margin: 0;
            padding: 0;
        }

        /* Paragraph Styling */
        p {
            color: #333333; /* Neutral dark text */
            font-size: 1.1rem; /* Slightly larger font for readability */
            margin-bottom: 1rem;
        }

        /* Image and Text Section Styling */
        .image-text-container {
            display: flex; /* Align image and text side-by-side */
            gap: 20px; /* Add spacing between image and text */
            align-items: flex-start; /* Align items at the top */
            padding: 20px;
            background-color: #f9f9f9; /* Light background for separation */
            border: 1px solid #e0e0e0; /* Subtle border */
            border-radius: 8px; /* Rounded corners */
            margin: 20px 0; /* Add spacing around the section */
        }

        .image-text-container img {
            max-width: 300px; /* Restrict image size */
            border-radius: 8px; /* Match container corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }

        .image-text-container p {
            flex: 1; /* Allow text to take up remaining space */
            color: #555555; /* Muted color for secondary information */
            font-size: 1rem; /* Standard font size */
        }

        /* Facebook Video Styling */
        iframe {
            display: block;
            margin: 20px auto; /* Center the video horizontally */
            max-width: 100%; /* Ensure responsiveness */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        /* Vests Distributed Section */
        p:last-of-type {
            text-align: center; /* Center-align the last paragraph */
            font-weight: bold; /* Highlight the text */
            font-size: 1.2rem; /* Make it stand out */
            color: #333333; /* Neutral dark text */
        }


    </style>
