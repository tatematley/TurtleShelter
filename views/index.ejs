        .flip-card {
            width: 200px; /* Set the width of each card */
            height: 120px;
            background-color: transparent;
            perspective: 1000px;
            width:300px;
            height: 150px;
            cursor: pointer;
            flex: 1 1 calc(25% - 20px);
        }

        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            position: relative;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
        }

        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }

        .flip-card-front,
        .flip-card-back {
