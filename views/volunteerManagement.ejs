<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Management</title>

    <style>
        body {
            background-color: white;
        }

        label {
            font-size: 2rem;
            margin-left: 30px;
            color: rgb(34, 34, 34);
        }

        table {
            width: 50% center;
            margin-right: 30px;
            margin-left: 30px;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 2px 8px rgba(0, 123, 181, 0.2);
        }

        td {
            padding: 5px;
            text-align: center;
        }

        tr:nth-child(even) td {
            background-color: #e3f3fb;
        }

        th{
            padding: 8px;
            text-align: center;
        }

        thead {
            background-color: #1f7646;
            color: white;
            text-align: center;
            font-weight: bold;
        }

        button {
            background-color: #1f7646;
            color: white;
            border-radius: 4px !important;
            padding: 8px 12px;
            border: none;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }

        button:hover {
            background-color: #0d4b29;
            transform: scale(1.05);
        }

        button:active {
            background-color: #0d4b29;
        }

        .pagination {
            text-align: center;
            margin: 20px 0;
        }

        .pagination a {
            color: #1f7646;
            text-decoration: none;
            margin: 10px 30px;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .pagination a:hover {
            background-color: #0d4b29;
        }

        .pagination .active {
            background-color: #0d4b29;
            color: white;
            border-color: #0d4b29;
        }
    </style>

</head>
<body>
    <!-- Nav Bar -->
    <%- include('partials/navbar', { page: 'volunteerManagement', security: security }) %>
    <br>

    <label><b>Volunteer Information</b></label>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Phone Number</th>
                <th>Email Address</th>
                <th>Zip Code</th>
                <th>Sewing Level</th>
                <th>Monthly Number of Hours</th>
                <th>Number of Volunteers</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < volunteer.length; i++) { %>
            <tr>
                <td><%= volunteer[i].volunteer_first_name %></td>
                <td><%= volunteer[i].volunteer_last_name %></td>
                <td><%= volunteer[i].volunteer_age %></td>
                <td><%= volunteer[i].volunteer_phone %></td>
                <td><%= volunteer[i].volunteer_email %></td>
                <td><%= volunteer[i].zip %></td>
                <td><%= volunteer[i].sewing_level %></td>
                <td><%= volunteer[i].num_monthly_hours %></td>
                <td><%= volunteer[i].num_volunteers %></td>

                <td>
                    <form action="/deleteVolunteer/<%= volunteer[i].volunteer_id %>" method="POST">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                    </form>
                </td>
                <td>
                    <form action="/editVolunteer/<%= volunteer[i].volunteer_id %>" method="GET">
                        <button type="submit">Edit</button>
                    </form>
                </td>
            </tr>
           <% } %>
        </tbody>
    </table>

    <!-- Page Navigation of Volunteers -->
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>">Previous</a>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>
        <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>">Next</a>
        <% } %>
    </div>

    <!-- Buttons -->
    <form action="/addVolunteer" method="GET">
        <button style="margin-left: 30px;" type="submit">Add Volunteer</button>
    </form>
    <br>
    <form action="/returnHome" method="GET">
        <button style="margin-left: 30px;" type="submit">Return Home</button>
    </form>
    <br>
    <form action="/logout" method="GET">
        <button style="margin-left: 30px;" type="submit">Log Out</button>
    </form>
    
</body>
</html>